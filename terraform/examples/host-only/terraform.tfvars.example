# Host-only Deployment Configuration Example
# Copy this file to terraform.tfvars and customize for your environment

# Required: Your GCP Project ID
project_id = "your-gcp-project-id"

# Deployment configuration
deployment_name = "algalon-host"
region         = "us-central1"
zones          = ["us-central1-a"]

# Network configuration
network_name = "algalon-host-network"
subnet_cidr  = "10.0.0.0/24"

# Security configuration (IMPORTANT: Restrict for production!)
grafana_allowed_ips = ["YOUR_IP/32"]  # Replace with your IP
ssh_allowed_ips     = ["YOUR_IP/32"]  # Replace with your IP

# Host configuration
host_machine_type      = "n1-standard-2"
host_boot_disk_size    = 50
enable_host_external_ip = true
create_static_ip       = true  # Recommended for stable monitoring host

# Cluster labeling
cluster_name     = "production"
environment_name = "host-only"

# Worker targets (optional - leave empty for initial host-only deployment)
# You can add workers later using manual registration
worker_targets = ""

# Example for pre-configured workers (if you already have worker IPs):
# worker_targets = "10.0.1.100:9090,10.0.1.101:9090"

# Additional labels
labels = {
  team        = "devops"
  project     = "gpu-monitoring"
  cost-center = "infrastructure"
}