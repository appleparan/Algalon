# Multi-Cluster Algalon Host Configuration
# Configuration for monitoring multiple clusters or environments

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_PORT=3000
GRAFANA_EXTERNAL_ACCESS=true
GRAFANA_MULTI_TENANCY=true

# VictoriaMetrics Configuration
VICTORIA_METRICS_PORT=8428
VICTORIA_METRICS_RETENTION=60d
VICTORIA_METRICS_EXTERNAL_ACCESS=false

# VMAgent Configuration
VMAGENT_SCRAPE_INTERVAL=5s
VMAGENT_EXTERNAL_LABELS=environment=multi-cluster,region=global

# Worker Targets by Cluster (comma-separated)
# Production Cluster
WORKER_TARGETS_PROD=10.0.1.100:9090,10.0.1.101:9090,10.0.1.102:9090
# Staging Cluster
WORKER_TARGETS_STAGING=10.0.2.100:9090,10.0.2.101:9090
# Development Cluster
WORKER_TARGETS_DEV=10.0.3.100:9090
# Edge Nodes
WORKER_TARGETS_EDGE=192.168.1.50:9090,192.168.1.51:9090

# Combined targets (auto-generated from above)
WORKER_TARGETS=${WORKER_TARGETS_PROD},${WORKER_TARGETS_STAGING},${WORKER_TARGETS_DEV},${WORKER_TARGETS_EDGE}

# Network Configuration
HOST_NETWORK=algalon_monitoring
SUBNET_CIDR=172.20.0.0/16

# Multi-cluster Labels
CLUSTER_LABELS_PROD=cluster=production,env=prod,region=us-central1
CLUSTER_LABELS_STAGING=cluster=staging,env=stage,region=us-central1
CLUSTER_LABELS_DEV=cluster=development,env=dev,region=us-central1
CLUSTER_LABELS_EDGE=cluster=edge,env=prod,region=edge-locations

# Resource Limits (scaled for multi-cluster)
GRAFANA_MEMORY_LIMIT=2g
GRAFANA_CPU_LIMIT=2.0
VICTORIA_METRICS_MEMORY_LIMIT=8g
VICTORIA_METRICS_CPU_LIMIT=4.0
VMAGENT_MEMORY_LIMIT=1g
VMAGENT_CPU_LIMIT=1.0

# High Availability Configuration
HA_ENABLED=true
HA_REPLICAS=2
HA_LOAD_BALANCER=nginx

# Dashboard Organization
DASHBOARD_ORG_PRODUCTION=Production
DASHBOARD_ORG_STAGING=Staging
DASHBOARD_ORG_DEVELOPMENT=Development
DASHBOARD_ORG_EDGE=Edge