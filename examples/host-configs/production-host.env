# Production Algalon Host Configuration
# Security-hardened configuration for production environments

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
# IMPORTANT: Change this password for production
GRAFANA_ADMIN_PASSWORD=change_me_in_production
GRAFANA_PORT=3000
GRAFANA_EXTERNAL_ACCESS=true
GRAFANA_SECURITY_ADMIN_PASSWORD_HASH=
GRAFANA_SECURITY_SECRET_KEY=
GRAFANA_DISABLE_GRAVATAR=true
GRAFANA_DISABLE_SIGNUPS=true

# VictoriaMetrics Configuration
VICTORIA_METRICS_PORT=8428
VICTORIA_METRICS_RETENTION=90d
VICTORIA_METRICS_EXTERNAL_ACCESS=false
VICTORIA_METRICS_MEMORY_LIMIT=4g

# VMAgent Configuration
VMAGENT_SCRAPE_INTERVAL=10s
VMAGENT_EXTERNAL_LABELS=environment=production,cluster=main,datacenter=primary

# Worker Targets (comma-separated)
# IMPORTANT: Update with your actual worker IPs
WORKER_TARGETS=10.0.1.100:9090,10.0.1.101:9090,10.0.1.102:9090

# Network Configuration
HOST_NETWORK=algalon_monitoring
SUBNET_CIDR=172.20.0.0/16

# Security Configuration
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/algalon.crt
SSL_KEY_PATH=/etc/ssl/private/algalon.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION=30d
BACKUP_SCHEDULE=0 2 * * *

# Resource Limits
GRAFANA_MEMORY_LIMIT=1g
GRAFANA_CPU_LIMIT=1.0
VICTORIA_METRICS_MEMORY_LIMIT=4g
VICTORIA_METRICS_CPU_LIMIT=2.0
VMAGENT_MEMORY_LIMIT=512m
VMAGENT_CPU_LIMIT=0.5

# Logging Configuration
LOG_LEVEL=info
LOG_RETENTION=7d
AUDIT_ENABLED=true

# Alerting Configuration (if implemented)
ALERTMANAGER_ENABLED=false
ALERT_WEBHOOK_URL=
SLACK_WEBHOOK_URL=