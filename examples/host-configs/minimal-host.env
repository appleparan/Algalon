# Minimal Algalon Host Configuration
# Lightweight configuration for edge or resource-constrained environments

# Grafana Configuration (minimal)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_PORT=3000
GRAFANA_EXTERNAL_ACCESS=true
GRAFANA_DISABLE_PLUGINS=true
GRAFANA_DISABLE_SANITIZE_HTML=true

# VictoriaMetrics Configuration (minimal)
VICTORIA_METRICS_PORT=8428
VICTORIA_METRICS_RETENTION=7d
VICTORIA_METRICS_EXTERNAL_ACCESS=false

# VMAgent Configuration (minimal)
VMAGENT_SCRAPE_INTERVAL=30s
VMAGENT_EXTERNAL_LABELS=environment=edge,type=minimal

# Worker Targets (single worker)
WORKER_TARGETS=localhost:9090

# Network Configuration
HOST_NETWORK=algalon_monitoring
SUBNET_CIDR=172.20.0.0/16

# Resource Limits (minimal)
GRAFANA_MEMORY_LIMIT=256m
GRAFANA_CPU_LIMIT=0.5
VICTORIA_METRICS_MEMORY_LIMIT=512m
VICTORIA_METRICS_CPU_LIMIT=0.5
VMAGENT_MEMORY_LIMIT=128m
VMAGENT_CPU_LIMIT=0.25

# Disable optional features
BACKUP_ENABLED=false
ALERTMANAGER_ENABLED=false
PROMETHEUS_DISABLED=true

# Minimal logging
LOG_LEVEL=warn
LOG_RETENTION=1d