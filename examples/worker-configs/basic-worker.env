# Basic Algalon Worker Configuration
# Copy to .env in algalon_worker directory

# all-smi version to use
ALL_SMI_VERSION=v0.9.0

# Port for metrics endpoint
ALL_SMI_PORT=9090

# Metrics collection interval in seconds
ALL_SMI_INTERVAL=5

# Bind address (0.0.0.0 for external access, 127.0.0.1 for local only)
HOST_IP=0.0.0.0

# Optional: Custom hostname for identification
# HOSTNAME=gpu-worker-01

# Optional: Custom labels for metrics
# WORKER_LABELS=environment=production,team=ml-ops